      <%= render 'atuendos/prenda', prenda: atuendo.cabeza %>
    <%end%>
    <% if !(atuendo.torso.blank?)  %>
      <%= render 'atuendos/prenda', prenda: atuendo.torso %>
    <%end%>
    <% if !(atuendo.piernas.blank?)  %>
      <%= render 'atuendos/prenda', prenda: atuendo.piernas %>
    <%end%>
    <% if !(atuendo.pies.blank?)  %>
      <%= render 'atuendos/prenda', prenda: atuendo.pies %>
    <%end%>
</div>