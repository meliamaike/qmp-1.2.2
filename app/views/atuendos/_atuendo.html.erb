<div class="atuendo-details-container">
  <% if(!atuendo.descripcion.blank?) %>
        <span>Descripcion:
          <%= atuendo.descripcion%>
        </span>
  <%end%>
<div>
  <div>
    <% if(!atuendo.ocasion_tag.blank?) %>
        <span>Ocasion:
          <%= atuendo.ocasion_tag%>
        </span>
    <%end%>
  </br>
    <% if(!atuendo.estacion_tag.blank?) %>
        <span>Estación:
          <%= atuendo.estacion_tag%>
        </span>
    <%end%>
    </br>
    <% if(!atuendo.tiempo_tag.blank?) %>
        <span>Tiempo:
          <%= atuendo.tiempo_tag%>
        </span>
    <%end%>
    </br>
      <% if(!atuendo.puntaje.blank?)%>
        <span>Puntaje: <%=atuendo.puntaje%> ⭐️
        </span>
        <%end%>
  </div>
</div>
</div>


