<%= render 'header'%>
<div class="guardarropas-show-container">
  <h2><%= @guardarropa.nombre %></h2>


  <a type="button"  href="/guardarropas/<%= @guardarropa.id %>/atuendos">Ver atuendos</a>
  <a type="button"  href="/guardarropas/<%= @guardarropa.id %>/atuendos/new">Crear atuendo</a>
  <a type="button"  href="/guardarropas/<%= @guardarropa.id %>/atuendos-generate">Generar atuendo</a>

  <% if @guardarropa.prendas.blank? %>
    <span class="text-center">TodavÃ­a no agregaste prendas <i class="fa fa-meh-o"></i></span>
  <% else %>
    <% @guardarropa.prendas.each do |p| %>
      <%= render 'prenda', prenda: p %>
