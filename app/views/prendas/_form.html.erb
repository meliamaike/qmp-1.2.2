<div id="create-item">

  <h2 class="create-title-contact"> <%= text %></h2>
  <div class="create-form">
    <%= form_for @prenda do |f|%>


      <%#= f.select :categoria, PrendaTipo.categoria.keys, {prompt: "Elija la categoria de prenda"},class:'form-items',required: true%>
      <%= f.collection_select :prenda_tipo_id, PrendaTipo.all, :id, :tipo, {:prompt => "Elija el tipo de Prenda", :selected => params[:prenda_tipo_id]} , { class:'form-items',required: true} %>

      <%= f.select :material, Prenda.materials.keys, {prompt: "Elija el material de la prenda"}, {class:'form-items',required: true} %>

      <%= f.label :color_primario,{class:'form-items-title'}  %>
      <%= f.color_field :color_primario,required: true%>
      <%= f.label :color_secundario,{class:'form-items-title'}%>
      <%= f.color_field :color_secundario,required: true %><br>

      <%= f.text_area :descripcion, {class:'form-items', placeholder:'DescripciÃ³n',required: true} %>
      <%= f.label :imagen,{class:'form-items-title'}  %>
      <%= f.file_field :imagen, {class:'btn-item-image'}%><br/>
      <%= f.collection_select :guardarropa_id,  Guardarropa.where(user: current_user), :id, :nombre, {:prompt => "Elija un guardarropas", :selected => params[:guardarropa_id]}, {class:'form-items',required: true } %>

      <div class="create-form-submit-buttons">
        <%= f.submit 'Guardar', {class:'btn-item-submit'} %>
        <%= link_to "<button>Cancelar</button>".html_safe, prendas_path(@prenda) , class: 'btn-item-cancel', required: true%>
      </div>

    <% end %>
  </div>

</div>