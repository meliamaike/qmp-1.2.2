
<div class=" margin-container">
  <div class="row center p-4">
    <p id="notice"><%= notice %></p>
    <h1>Usuarios Registrados</h1>
  </div>
  <table class="table">
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Guardarropas</th>
      <th scope="col">Prendas</th>
      <th scope="col">Fecha de registro</th>
    </tr>
    <% @users.each do |u| %>
      <tr>
        <td><%=u.email%></td>
        <td><%= Guardarropa.where(user: u).count %> </td>
        <%sum=0%>
        <% Guardarropa.where(user: u).each do |g| %>
          <%sum= sum + Prenda.where(guardarropa_id: g.id).count %>
        <% end %>
        <td><%=sum%></td>
        <td><%=u.created_at%></td>
      </tr>
    <% end %>
  </table>
</div>
<%= link_to 'New User', new_user_path %>
